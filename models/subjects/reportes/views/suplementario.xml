<odoo>

    <data>
        <record id="view_validador_suplementario_form" model="ir.ui.view">
            <field name="name">dara_mallas.validador_suplementario.form</field>
            <field name="model">dara_mallas.validador_suplementario</field>
            <field name="arch" type="xml">
                <form string="Validador Suplementario">
                    <sheet>
                        <group>
                            <field name="period_id"/>
                            <field name="resultado_odoo" widget="html" readonly="1" nolabel="1"/>
                        </group>

                        <group attrs="{'invisible': [('excel_file', '=', False)]}">
                            <field name="excel_filename" readonly="1"/>
                            <field name="excel_file" filename="excel_filename" widget="binary"/>
                        </group>

                        <footer>
                            <button name="execute" string="Buscar" type="object" class="oe_highlight"/>                        
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_validador_suplementario_form" model="ir.actions.act_window">
            <field name="name">Validador suplementario</field>
            <field name="res_model">dara_mallas.validador_suplementario</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_validador_suplementario_form"/>
        </record>

        <menuitem id="suplementario_vista" name="Validador suplementario odoo-banner" parent="dara_homologations_reports" action="action_validador_suplementario_form" sequence="4"/>
    </data>
</odoo>